{
    "compilerOptions": {
      "sourceMap": true,
      "target": "es5",
      "module": "commonjs",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "allowSyntheticDefaultImports": true,
      "declaration": false,
      "removeComments": true,
      "noImplicitReturns": true,
      "noUnusedLocals": false,
      "strict": true,
      "outDir": "build",
      "lib": [
        "es6",
        "es7",
        "dom"
      ],
      "baseUrl": "src",
      "plugins": [
        { "transform": "transformer-module" },
      ]
    },
    "exclude": [
      "build",
      "node_modules"
    ]
  }